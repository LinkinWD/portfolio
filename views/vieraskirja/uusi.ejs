<% layout('/layouts/boilerplate')%>

<!-- bootstrap hoitaa formien validoinnin. muista novalidate, required ja oma luokka, jota scripti ettii-->

<h1>Lisää uusi tuote</h1>
        <form action="/vieraskirja" method="post" novalidate class="validoi-tämä">
           
            <div>
                <label class="form-label" for="otsikko">Otsikko:</label>
                <input class="form-control" type="text" id="otsikko" name="vieraskirja[otsikko]" required>
                <div class="invalid-feedback">
                    Tämä kenttä pitää täyttää
                  </div>
            </div>
            <div>
                <label class="form-label" for="kommentti">kommentti:</label>
                <input class="form-control" type="text" id="kommentti" name="vieraskirja[kommentti]" required>
                <div class="invalid-feedback">
                    Tämä kenttä pitää täyttää
                  </div>
            </div>
        <button class="mt-3 btn btn-primary">Lisää uusi tervehdys</button>
        </form>
    
        <%- include('../partials/scripts') %> 