<% layout('layouts/boilerplate') %>

<h1>Login</h1>

<form action="/login" method="POST" class="validoi-tämä" novalidate>
    <div>
        <label class="form-label" for="username">Käyttäjänimesi:</label>
        <input class="form-control" type="text" id="username" name="username" required>
        <div class="invalid-feedback">
            Tämä kenttä pitää täyttää
        </div>
    </div>
  
    <div>
        <label class="form-label" for="password">Salasanasi:</label>
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="invalid-feedback">
            Tämä kenttä pitää täyttää
        </div>
    </div>
    <button class="btn btn-success mt-3">Kirjaudu sisään</button>
</form>

